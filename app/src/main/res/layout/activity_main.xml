<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="business"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                app:icon="@drawable/baseline_business_24"
                app:iconTint = "#FD6201"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                />

            <Button
                android:id="@+id/entertainment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="entertainment"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                app:icon="@drawable/baseline_movie_24"
                app:iconTint = "#FD6201"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                />

            <Button
                android:id="@+id/general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="general"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                app:icon="@drawable/baseline_newspaper_24"
                app:iconTint = "#FD6201"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                />

            <Button
                android:id="@+id/health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="health"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                app:icon="@drawable/baseline_health_and_safety_24"
                app:iconTint = "#FD6201"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                />

            <Button
                android:id="@+id/science"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="science"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                app:icon="@drawable/baseline_science_24"
                app:iconTint = "#FD6201"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                />

            <Button
                android:id="@+id/sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sports"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                app:icon="@drawable/baseline_sports_cricket_24"
                app:iconTint = "#FD6201"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                />

            <Button
                android:id="@+id/technology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="technology"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                app:icon="@drawable/baseline_computer_24"
                app:iconTint = "#FD6201"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                />


        </LinearLayout>

    </HorizontalScrollView>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>